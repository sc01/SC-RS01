@model IEnumerable<Sign.Models.Business.Contract>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a class="btn btn-primary" asp-action="Create">اضــافة عـــقد</a>
</p>

<div class="col-lg-12">
<div class="panel panel-primary">
    <div class="panel-heading clearfix">
        <h3 class="panel-title">الــعـــقـــود</h3>
        <ul class="panel-tool-options">
            <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
            <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
            <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
        </ul>
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables-example">
                <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ContractType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContractDate)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.StartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EndDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotoalContratValue)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ElectricBillValue)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.WaterBillValue)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.PeriodType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OfficeFees)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CustomerName)
                    </th>
                    <th>الاعدادات</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContractType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContractDate)
                            @Html.dis
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotoalContratValue)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ElectricBillValue)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WaterBillValue)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.PeriodType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OfficeFees)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerName.Name)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-primary"><i class="glyphicon glyphicon-edit"></i></a>
            
                            <a href="#" onclick="deleteitm(this , @item.Id)" class="text-primary"><i class="icon-trash"></i></a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
    </div>



@section Scripts
{
    <script>

        function deleteitm(e , id) {
            if (confirm("هل تريد الحذف فعلا؟")) {
                $.get("/Contracts/Delete?id=" + id,
                    function() {

                        $(e).parent().parent().remove();
                        alert("تم الحــذف بنجاح !");
                    });
            }
        }

    </script>
}
